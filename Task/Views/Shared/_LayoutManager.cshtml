<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Manager Dashboard</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet"> 
    <style>
      
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
            margin: 0;
        }

        
        #wrapper {
            display: flex;
            width: 100%;
        }

        #sidebar {
            width: 250px;
            height: 100vh;
            background-color: #5c4d8c; 
            position: absolute; 
            left: -250px; 
            transition: left 0.3s;
            z-index: 1000; 
        }

            #sidebar.active {
                left: 0; 
            }

            #sidebar .nav-link {
                color: #fff; 
                padding: 15px;
                text-decoration: none;
            }

                #sidebar .nav-link:hover {
                    background-color: #7b6a9a; 
                }

        
        .navbar {
            background-color: #5c4d8c; 
            color: white;
            padding: 10px 15px;
            position: fixed; 
            top: 0; 
            width: 100%; 
            z-index: 1050; 
        }

            .navbar .nav-link {
                color: white; 
                margin-right: 1px;
            }

                .navbar .nav-link:hover {
                    color: #e2e6ea; 
                }

        
        #content-wrapper {
            padding-top: 60px; 
            width: 100%; 
            position: relative; 
        }

        
        footer {
            padding: 10px;
            text-align: center;
        }

        
        .body-content {
            overflow: auto;
            height: calc(100vh - 60px); 
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark">
        <div class="container-fluid">
            <span id="menu-toggle" class="navbar-toggler-icon"></span>
            
            <img src="~/Content/logo2.jpg" alt="Logo" style="height: 40px;" />
            <a class="navbar-brand" href="#">Manager Portal</a> 
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Manager", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Task Tracking", "OverallMonitoring", "Manager", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("View All Tasks", "ViewAllTasks", "Manager", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
            <ul class="navbar-nav logout-button">
                <li class="nav-item">
                    @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "nav-link" })
                    <i class="fas fa-sign-out-alt"></i>
                </li>
            </ul>
        </div>
    </nav>

    <div id="wrapper">
        <div id="sidebar">
            <nav class="navbar-dark">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Dashboard", "Index", "Manager", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Create Task", "Create", "Manager", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("View All Tasks", "ViewAllTasks", "Manager", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Reassign Tasks", "ReassignTasks", "Manager", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Task Tracking", "TaskTracking", "Manager", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Overall Monitoring", "OverallMonitoring", "Manager", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Feedback", "Feedback", "Manager", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </nav>
        </div>

        <div id="content-wrapper" class="container-fluid body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Manager Dashboard</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $("#menu-toggle").click(function () {
                $("#sidebar").toggleClass("active");
            });
        });
    </script>
</body>
</html>
