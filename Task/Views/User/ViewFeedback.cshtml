@model IEnumerable<AssignTasks>
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-5">
    <div class="header-bg text-center mb-4">
        <h2 class="text-light">Provide Feedback</h2>
    </div>

  
    <div class="stylish-background">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr class="header-row">
                        <th>Title</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Priority</th>
                        <th>Deadline</th>
                        <th>Category</th>
                        <th>Created By</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model)
                    {
                        <tr class="task-row">
                            <td>@task.Title</td>
                            <td>@task.Description</td>
                            <td>
                                <span class="badge status-badge" style="background-color: @(task.Status == "Completed" ? "#28A745" : task.Status == "In Progress" ? "#17A2B8" : "#DC3545");">
                                    @task.Status
                                </span>
                            </td>
                            <td>
                                <span class="badge priority-badge" style="background-color: @(task.Priority == "High" ? "#FF5733" : task.Priority == "Medium" ? "#FFC300" : "#28A745");">
                                    @task.Priority
                                </span>
                            </td>
                            <td>@task.Deadline</td>
                            <td>@task.Category</td>
                            <td>@task.CreatedBy</td>
                            <td>
                                @Html.ActionLink("View and Comment", "TaskDetails", new { id = task.AssignTaskID }, new { @class = "btn btn-success", @style = "display: flex; align-items: center; justify-content: center;" })
                                <i class='fas fa-comment-alt' style='margin-left: 5px;'></i>
                            </td>
                        </tr>
                    }

                   
                </tbody>
            </table>
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        background-color: #f0f2f5;
        font-family: 'Arial', sans-serif;
    }

    .header-bg {
        background: linear-gradient(135deg, #6a82fb, #fc5c7d);
        padding: 30px 0;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        animation: fadeIn 1s ease-in-out;
    }

    .stylish-background {
        background: url('https://images.unsplash.com/photo-1519340333666-7e6dca5f5c3f') no-repeat center center/cover;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        margin-top: 20px;
    }

    .table {
        border: none;
        border-radius: 8px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.9);
    }

    .header-row {
        background-color: #007BFF;
        color: white;
    }

    .table th, .table td {
        padding: 15px;
        text-align: center;
        font-size: 1em;
        vertical-align: middle;
    }

    .task-row {
        transition: background-color 0.3s;
    }

    .task-row:hover {
        background-color: rgba(229, 229, 229, 0.5);
    }

    .badge {
        transition: transform 0.2s;
        font-weight: bold;
        padding: 6px 12px;
        border-radius: 5px;
    }

    .badge:hover {
        transform: scale(1.1);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    
    .btn-success {
        background-color: #28a745; 
        border-color: #28a745; 
    }

    .btn-success:hover {
        background-color: #218838; 
        border-color: #1e7e34; 
    }
</style>
