@model IEnumerable<Notifications>

<div class="container mt-5 notification-page">
    <h2 class="text-center mb-4">Your Notifications</h2>

    <div class="row">
        @foreach (var notification in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card notification-card shadow-lg animated fadeIn">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon-circle">
                                <i class="fas fa-bell"></i>
                            </div>
                            <div class="ml-3">
                                <h5 class="card-title">
                                    @notification.Message
                                </h5>
                                <p class="card-text">
                                    <i class="fas fa-clock"></i>
                                    @notification.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")
                                </p>
                            </div>
                        </div>
                        <div class="mt-3">
                            @if (notification.IsRead)
                            {
                                <span class="badge badge-pill badge-success animated bounceIn">
                                    <i class="fas fa-check-circle"></i> Read
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-pill badge-danger animated bounceIn">
                                    <i class="fas fa-exclamation-circle"></i> Unread
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<style>
   
    .notification-page {
        background: #f4f7f9;
    }

      
        .notification-page .notification-card {
            background: linear-gradient(145deg, #ffffff, #f0f0f0);
            border-radius: 15px;
            padding: 20px;
            transition: transform 0.3s ease-in-out;
        }

            .notification-page .notification-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        .notification-page .icon-circle {
            width: 50px;
            height: 50px;
            background-color: #007bff;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
            font-size: 24px;
        }

        
        .notification-page h5 {
            font-size: 18px;
            font-weight: bold;
            margin: 0;
            color: #333;
        }

        .notification-page .card-text {
            font-size: 14px;
            color: #777;
        }

       
        .notification-page .badge {
            font-size: 14px;
            padding: 0.5rem 1rem;
        }

   
    .animated {
        animation-duration: 0.5s;
        animation-fill-mode: both;
    }

    .fadeIn {
        animation-name: fadeIn;
    }

    .bounceIn {
        animation-name: bounceIn;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes bounceIn {
        from, 20%, 40%, 60%, 80%, to {
            -webkit-animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
            animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
        }

        0% {
            opacity: 0;
            -webkit-transform: scale3d(0.3, 0.3, 0.3);
            transform: scale3d(0.3, 0.3, 0.3);
        }

        20% {
            -webkit-transform: scale3d(1.1, 1.1, 1.1);
            transform: scale3d(1.1, 1.1, 1.1);
        }

        40% {
            -webkit-transform: scale3d(0.9, 0.9, 0.9);
            transform: scale3d(0.9, 0.9, 0.9);
        }

        60% {
            opacity: 1;
            -webkit-transform: scale3d(1.03, 1.03, 1.03);
            transform: scale3d(1.03, 1.03, 1.03);
        }

        80% {
            -webkit-transform: scale3d(0.97, 0.97, 0.97);
            transform: scale3d(0.97, 0.97, 0.97);
        }

        to {
            opacity: 1;
            -webkit-transform: scaleX(1);
            transform: scaleX(1);
        }
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
