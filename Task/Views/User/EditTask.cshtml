@model AssignTasks
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-5">
    <div class="header text-center mb-4">
        <h2>Edit Task</h2>
    </div>

    @using (Html.BeginForm("EditTask", "User", FormMethod.Post, new { @class = "edit-task-form" }))
    {
        @Html.HiddenFor(m => m.AssignTaskID)
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Status, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Status, new { @class = "form-control", placeholder = "Enter status" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Priority, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Priority, new { @class = "form-control", placeholder = "Enter priority" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Deadline, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Deadline, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
        </div>
    }
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />


<style>
    body {
        background: linear-gradient(to right, #e66465, #9198e5); 
        font-family: 'Arial', sans-serif;
        color: #333; 
    }

    .header h2 {
        color: #ffffff; 
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); 
        margin-bottom: 20px; 
    }

    .edit-task-form {
        background-color: rgba(255, 255, 255, 0.9); 
        padding: 30px; 
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); 
        transition: transform 0.3s; 
    }

        .edit-task-form:hover {
            transform: translateY(-5px); 
        }

    .form-control {
        border: 2px solid #007BFF; 
        border-radius: 8px; 
        transition: border-color 0.3s; 
    }

        .form-control:focus {
            border-color: #0056b3; 
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); 
        }

    .btn {
        background-color: #007BFF; 
        color: #fff; 
        transition: background-color 0.3s, transform 0.2s; 
    }

        .btn:hover {
            background-color: #0056b3; 
            transform: scale(1.05); 
        }

    .form-group label {
        font-weight: bold; 
        color: #333; 
    }
</style>
