@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@model IEnumerable<AssignTasks>

<!-- Container for Assigned Tasks -->

<div class="container mt-5">
    <div class="header-bg text-center mb-4">
        <h2 class="text-light">Assign Tasks</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="fas fa-exclamation-triangle"></i> No tasks assigned yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr style="background-color: #4A90E2; color: white;">
                        <th>Title</th>
                        <th>Description</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td style="color: #333;">@task.Title</td>
                            <td style="color: #555;">@task.Description</td>
                            <td>
                                <span class="badge"
                                      style="background-color: @(task.Priority == "High" ? "#FF5733" : task.Priority == "Medium" ? "#FFC300" : "#28A745");
                                              color: white;
                                              font-size: 0.9em;
                                              border-radius: 12px;">
                                    @task.Priority
                                </span>
                            </td>
                            <td>
                                <span class="badge"
                                      style="background-color: @(task.Status == "Pending" ? "#6C757D" : task.Status == "In Progress" ? "#17A2B8" : task.Status == "Completed" ? "#28A745" : "#DC3545");
                                              color: white;
                                              font-size: 0.9em;
                                              border-radius: 12px;">
                                    @task.Status
                                </span>
                            </td>
                            <td>
                                <form method="post" action="@Url.Action("ChangeTaskStatus", "User")" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@task.AssignTaskID" />
                                    <select name="newStatus" class="form-select form-select-sm d-inline" style="width: auto; border-radius: 8px; border: 1px solid #4A90E2; background-color: #f8f9fa;">
                                        <option value="Pending" @(task.Status == "Pending" ? "selected" : "")>Pending</option>
                                        <option value="In Progress" @(task.Status == "In Progress" ? "selected" : "")>In Progress</option>
                                        <option value="Completed" @(task.Status == "Completed" ? "selected" : "")>Completed</option>
                                        <option value="Cancelled" @(task.Status == "Cancelled" ? "selected" : "")>Cancelled</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary btn-sm ml-2" title="Update Task Status">
                                        <i class="fas fa-sync-alt"></i> Update
                                    </button>
                                </form>
                            </td>
                          
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>


<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }
    .header-bg {
        background: linear-gradient(135deg, #6a82fb, #fc5c7d);
        padding: 30px 0;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        animation: fadeIn 1s ease-in-out;
    }

    .table {
        border: 1px solid #4A90E2;
    }

        .table th, .table td {
            padding: 15px;
            text-align: center;
            font-size: 1em;
        }

        .table th {
            font-weight: bold;
        }

        .table tr {
            transition: background-color 0.3s;
        }

            .table tr:hover {
                background-color: #e9ecef;
            }

    .badge {
        transition: transform 0.2s;
        font-weight: bold;
    }

        .badge:hover {
            transform: scale(1.1);
        }

    .form-select {
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-select:focus {
            border-color: #4A90E2;
            box-shadow: 0 0 5px rgba(74, 144, 226, 0.5);
        }
</style>
