@model User

@{
    ViewBag.Title = "Delete User";
}
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 600px;
            margin-top: 50px;
        }

        .header {
            color: #343a40;
            margin-bottom: 30px;
        }

        .user-info {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .user-info h4 {
                color: #007bff;
            }

        .form-actions {
            margin-top: 20px;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-default {
            background-color: #f8f9fa;
            border-color: #ced4da;
        }

            .btn-default:hover {
                background-color: #e2e6ea;
                border-color: #dae0e5;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="user-info">
            <h2 class="header">Delete User</h2>
            <h3>Are you sure you want to delete this user?</h3>
            <hr />
            <h4>@Model.Username</h4>
            <dl class="row">
                <dt class="col-sm-4">Role:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>

                <dt class="col-sm-4">Signup Date:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.SignupDate)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Back to List", "UserList", null, new { @class = "btn btn-default ms-2" })
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
