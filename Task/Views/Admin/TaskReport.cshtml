@{
    ViewBag.Title = "Task Activity Report";
}
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<h2 class="text-center text-primary"><i class="fas fa-tasks"></i> Task Activity Report</h2>

<!-- Simple Text Report -->
<div class="report-section mt-4">
    <h4>Total Tasks: @ViewBag.TotalTasks</h4>
    <h4>Completed Tasks: @ViewBag.CompletedTasks</h4>
    <h4>Tasks In Progress: @ViewBag.InProgressTasks</h4>
    <h4>Pending Tasks: @ViewBag.PendingTasks</h4>
    <h4>Completion Rate: @ViewBag.CompletionRate%</h4>
</div>
<div class="mt-4">
    @using (Html.BeginForm("GenerateReport", "Admin", FormMethod.Post))
    {
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-file-alt"></i> Generate Report
        </button>
    }
</div>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5><i class="fas fa-list"></i> Total Tasks</h5>
                <h3>@ViewBag.TotalTasks</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5><i class="fas fa-check"></i> Completed Tasks</h5>
                <h3>@ViewBag.CompletedTasks</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <h5><i class="fas fa-spinner"></i> In Progress</h5>
                <h3>@ViewBag.InProgressTasks</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h5><i class="fas fa-hourglass-half"></i> Pending Tasks</h5>
                <h3>@ViewBag.PendingTasks</h3>
            </div>
        </div>
    </div>
</div>


<div class="chart-container mt-5" style="max-width: 400px; margin: 0 auto;">
    <canvas id="taskChart" width="300" height="300"></canvas>
</div>

<script>
    var ctx = document.getElementById('taskChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Completed', 'In Progress', 'Pending'],
            datasets: [{
                label: 'Task Distribution',
                backgroundColor: ['#28a745', '#ffc107', '#dc3545'],
                data: [@ViewBag.CompletedTasks, @ViewBag.InProgressTasks, @ViewBag.PendingTasks]
            }]
        },
        options: {
            responsive: false,  
            maintainAspectRatio: false  
        }
    });
</script>


