<h3 class="text-center text-secondary mt-5">User Activities</h3>

@model Task.Models.TaskMonitoringViewModel
@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
<style>
    .card {
        border-radius: 15px;
        border: 1px solid #007bff; 
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .badge {
        font-size: 0.9em;
    }

    .card-body {
        background-color: #f8f9fa; 
    }
</style>
<div class="card shadow-sm mt-3">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th><i class="fas fa-comment-dots"></i> Comments</th>
                    <th><i class="fas fa-clock"></i> Last Updated</th>
                    <th><i class="fas fa-user"></i> Username</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Activity != null && Model.Activity.Any())
                {
                    foreach (var activity in Model.Activity)
                    {
                        <tr>
                            <td>@activity.Comments</td>
                            <td>@activity.LastUpdated</td>
                            <td>@Model.AssignedUsername</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No activities found.</td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
