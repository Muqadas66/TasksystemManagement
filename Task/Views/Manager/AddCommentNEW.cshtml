
@model TaskActivities

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">Add Comment for Task</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" action="@Url.Action("AddComment", "Manager")">
                @Html.HiddenFor(model => model.TaskId)

                <div class="form-group">
                    <label for="taskTitle">Task Title</label>
                    <input type="text" class="form-control" id="taskTitle" value="@ViewBag.TaskTitle" readonly />
                </div>

                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea class="form-control" id="comment" name="Comments" rows="4" placeholder="Enter your comment here..."></textarea>
                </div>

                <button type="submit" class="btn btn-success">Submit Comment</button>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-body {
        padding: 1.5rem;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }
</style>


