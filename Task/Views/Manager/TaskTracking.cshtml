@model List<AssignTasks>
@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
<h2 class="text-center my-4 text-primary">Monitor Tasks</h2>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead class="bg-primary text-white">
            <tr>
                <th>Task Title</th>
                <th>Assigned User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>
                        @{
                            var users = ViewBag.Users as List<User>; 
                            var user = users?.FirstOrDefault(u => u.UserID == task.AssignedUserID);
                            if (user != null)
                            {
                                <span class="badge bg-success p-2">
                                    <i class="fas fa-user"></i> @user.Username
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning p-2">
                                    <i class="fas fa-exclamation-triangle"></i> Not Assigned
                                </span>
                            }
                        }
                    </td>
                    <td>
                        <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("ViewTaskDetails", "Manager", new { id = task.AssignTaskID })">
                            <i class="fas fa-eye"></i> Track Tasks
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    
    table tr {
        transition: transform 0.2s ease-in-out;
    }

        table tr:hover {
            transform: scale(1.02);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

  
    .btn-outline-primary:hover {
        background-color: #007bff;
        color: #fff;
        transition: 0.3s ease;
    }

   
    .badge {
        animation: fadeInUp 0.5s ease-in-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

